<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="MarketSystem.Views.ProductManager"
             Title="Productos">
    <VerticalStackLayout>
        <Label 
            Text=""
            FontSize="Large"
            FontFamily="Titulo"
            VerticalOptions="Center" 
            HorizontalOptions="Center" />

        <Button
          x:Name="newProductBtn"
          Margin="0,30,0,0"
          Text="NUEVO PRODUCTO" 
          Clicked="ProductRegisterPageClicked"
          FontFamily="OpenSansRegular"
          BackgroundColor="Green"
          TextColor="White"
          BorderColor="Black"
          BorderWidth="1"
          HorizontalOptions="Center"
          SemanticProperties.Hint="Register new product"
          HeightRequest="65"/>
    </VerticalStackLayout>
</ContentPage>